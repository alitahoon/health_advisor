<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center">
    <androidx.cardview.widget.CardView
        android:layout_width="250dp"
        android:layout_height="350dp"
        android:layout_margin="@dimen/main_margin"
        android:id="@+id/cat_content_cardView"
        app:cardBackgroundColor="@color/non_basic"
        app:cardCornerRadius="100dp"
        app:cardElevation="12dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="@dimen/main_padding"
            >
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image_cat_content"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/diabets_food"
                android:elevation="50dp"
                android:fadingEdgeLength="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/main_margin"
                android:layout_height="wrap_content"
                android:id="@+id/name_cat_content"
                android:text="vegetables"
                android:letterSpacing="0.2"
                android:textColor="@color/basic_color"
                android:textSize="22dp"
                android:textStyle="bold"/>
            <androidx.appcompat.widget.AppCompatRatingBar
                android:id="@+id/ratebar_cat_con"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:rating="3"
                android:layout_margin="@dimen/main_margin"
                android:progressTint="@color/rateColor"
                android:progressBackgroundTint="@color/basic_color"/>
            android:layout_margin="@dimen/main_margin"/>
            <TextView
                android:layout_marginHorizontal="@dimen/main_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/details_cat_content"
                android:textColor="@color/basic_color"
                android:text="Vegetables are parts of plants that are consumed by humans Read More..."
                android:gravity="center"
                android:textSize="15sp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginLeft="@dimen/main_margin">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_categorie" />

                <TextView
                    android:id="@+id/categoriy_name_cat_content"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"                    android:textSize="15dp"
                    android:layout_marginLeft="5dp"
                    android:text="Diabits Food"
                    android:gravity="center"
                    android:textColor="@color/basic_color"/>

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/lot_fav_animation_cat_content"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="right"
                    app:lottie_rawRes="@raw/favourite_material_design"
                    android:scaleType="fitCenter"
                    app:lottie_speed="1.5"
                    />

            </LinearLayout>



        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>